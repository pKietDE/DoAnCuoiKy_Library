@model IEnumerable<Library.Models.UserLogin>

@{
    ViewBag.Title = "Danh Sách User Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Library.Models.UserLogin user = (Library.Models.UserLogin)ViewBag.username;
}

<h2>Index</h2>
<div class="container" style="margin:100px 0px  0px;min-height:200px;">
    <div class="col-md-12">
        <h2>Danh Sách User login</h2>

        <a class="btn btn-xs btn-success " href="~/User/ThemMoi">Thêm Mới</a>
    </div>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoVaTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserRole)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoVaTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserRole)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdNguoiDung }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdNguoiDung }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdNguoiDung })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

